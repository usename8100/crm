<%= content_for(:sidebar) do %>
<%= render :partial => "layouts/sidebar" %>
<% end -%>
<div class="col-md-10 main">
	<div class="cata-main">
		<div class="cata-bo">
			<h4 style="margin-left: 30px;margin-top: 20px;">Add Tax</h4>
			<div class="cata-border-add-x"></div>
				<%= form_with(model: @tax, url: new_tax_path) do |f| %>
					<div style="padding-left: 50px; padding-right: 50px; ">
						<div class="form-group">
							<%= f.label :name, "Name" %>
							<%= f.text_field :name, class:"form-control", placeholder: "Name"%>
						</div>
						<div class="form-group">
							<%= f.label :tax_percent, "Tax percentage" %>
							<%= f.number_field :tax_percent, max:99, min: 1 , class:"form-control", placeholder: "Tax percentage"%>
						</div>
					</div>
					<div style="padding-top: 8px;"></div>
					<div class="cata-border-add-x"></div>
					<div style="padding-left: 5%; padding-bottom: 20px;">
					<%= f.submit "Save", class: "btn btn-success btn-sm", style:"width: 50px" %>
				<% end %>
				<%= link_to taxes_path do %>	
					<button type="button" class="btn btn-secondary btn-sm"> Close</button>	
				<% end -%>	
			</div>
		</div>
	</div>
</div>

