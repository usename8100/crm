<%= content_for(:sidebar) do %>
<%= render partial: "layouts/sidebar", locals: {account: current_account, tab: "sale"} %>
<% end -%>
<div class="col-md-10 main">
	<div class="cata-main">
		<div class="cata-bo">
			
			<br><h3 style="margin-left: 30px;display: inline;">Manage Taxes</h3>
			<%= link_to new_tax_path do %>
			<button style="float:right;margin-right: 30px ;" type="button" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Add New Tax</button>
			<% end -%>
			<div class="cata-border-x"></div>
			<span style="float:right;margin-right: 80px">
			<div class="form-inline my-2 my-lg-0">
    		  <%= search_form_for @q, url: taxes_path do |f| %>
			    <%= f.search_field :name_cont, placeholder: "Tax Name ...", class:"search-field form-control"%>
			    <%= f.submit "Search", class: "btn btn-search" %>
			  <% end -%>
			</div></span>
			<div>
				<center>
					<div class="table-c-bo"><table>
						<tr>
							<th style="width: 60px;"><%= sort_link(@q, :id) do %>
  								<strong style="color:white;"> ID</strong>
								<% end %>
							</th>
							<th>
								<%= sort_link(@q, :name) do %>
					  			<strong style="color:white;"> Name</strong>
								<% end %>
							</th>
							<th><%= sort_link(@q, :tax_percent) do %>
					  			<strong style="color:white;"> Tax</strong>
								<% end %>
							</th>
							<th style="width:350px;">
				    			Action
							</th>
						</tr>
						<% @taxes.each do |tax| %>
						<tr>
							<td><%= tax.id %></td>
							<td><%= tax.name %></td>
							<td><%= tax.tax_percent %> %</td>
							<td>
								<span>
									<div class="btn-mini">
										<%= link_to  edit_tax_path(tax) do %>
										<button type="button" class="btn btn-warning btn-sm"><i class="fas fa-pencil-alt"></i> Edit</button>
										<% end %>
										<%= link_to  delete_tax_path(tax.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
										<button type="button" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Delete</button>
										<% end %>
									</div>	
								</span>
							</td>
						</tr>
						<% end %>
					</table></div>
					<%== pagy_bootstrap_nav(@pagy).html_safe %>
				</center>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	function getSelectValue()
    {
      var selectedValue = document.getElementById("list").value;
      console.log(selectedValue);
    }
    getSelectValue();
</script>