<%= content_for(:sidebar) do %>
<%= render partial: "layouts/sidebar", locals: {account: current_account} %>
<% end -%>
<div class="col-md-10 main">
	<div class="cata-main">
		<div class="cata-bo">
			
			<br><h3 style="margin-left: 30px;display: inline;">Manage Taxes</h3>
			<%= link_to new_tax_path do %>
			<button style="float:right;margin-right: 30px ;" type="button" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Add New Tax</button>
			<% end -%>
			<div class="cata-border-x"></div>
			<div style="float:right;margin-right:5%"> 
				<select style="float:left;margin-left: 5px; width: auto ;" class="form-select" aria-label="Default select example">
					<option selected disabled="">Sort By</option>
					<option value="1">Name</option>
					<option value="2">2</option>
				</select>
			</div>
			<div>
				<center>
					<div class="table-c-bo"><table>
						<tr>
							<th style="width: 60px;">ID</th>
							<th>Name</th>
							<th>Tax</th>
							<th style="width:350px;"><span style="float:right;margin-right: 30px;width: 310px;">
								<div class="input-group">
									<input  type="text" class="form-control" id="" placeholder="search">
									<button class="btn btn-success btn-sm" type="button"><i class="fa fa-search"></i></button>
								</div>
							</span></th>
						</tr>
						<% @taxes.each do |tax| %>
						<tr>
							<td><%= tax.id %></td>
							<td><%= tax.name %></td>
							<td><%= tax.tax_percent %> %</td>
							<td>
								<span>
									<div class="btn-mini">
										<%= link_to  edit_tax_path(tax) do %>
										<button type="button" class="btn btn-warning btn-sm"><i class="fas fa-pencil-alt"></i> Edit</button>
										<% end %>
										<%= link_to  delete_tax_path(tax.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
										<button type="button" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Delete</button>
										<% end %>
									</div>	
								</span>
							</td>
						</tr>
						<% end %>
					</table></div>
					<div>
						<button style="margin-right: 10px;" type="button" class="btn btn-secondary btn-sm"> Previous</button>
						<button type="button" class="btn btn-secondary btn-sm"> next</button>				
						<div style="padding-bottom: 20px;"></div>
					</div>
				</center>
			</div>
		</div>
	</div>
</div>
