		$(".tr_item[data-itemid='"+item_id+"'] .table_amount").val(last_amount);
	});
	$('.tr_item .table_amount').each(function() {
		total_amount += parseInt($(this).val());
	});
	$('#subtotal_price').html(total_amount);
	$('#tax_price_result').html(total_amount-subtotal_tax);

});
</script>
