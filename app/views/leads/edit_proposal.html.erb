<%= content_for(:sidebar) do %>
<%= render partial: "layouts/sidebar", locals: {account: current_account} %>
<% end -%>
<div class="col-md-10 main">
	<h2>Add Proposal to <b><%= @lead.name %></b></h2>
	<div class="proposal-upper">
		<div class="proposal-upper-left" style="float: left;">
			<div class="proposal-title">
				<h2>Proposal Details</h2>
			</div>
			<div style="margin-top: 20px;">
				<%= form_with(model: @proposal, url: update_lead_proposal_path(@lead.id, @proposal), id:"editProposalForm") do |form| %>
					<div class="mb-3 form-group">
			      <%= form.label :subject, "Subject" %>
			      <%= form.text_field :subject, class:"form-control", value: @proposal.subject %>
			    </div>
			    <div class="mb-3 form-group">
			      <%= form.label :datestart, "Proposal date start at" %>
			      <%= form.date_field :datestart, class:"form-control", value:@proposal.start_date.strftime("%F") %>
			    </div>
			    <div class="mb-3 form-group">
			      <%= form.label :dateend, "Proposal date end at" %>
			      <%= form.date_field :dateend, class:"form-control", value:@proposal.end_date.strftime("%F") %>
			    </div>
			    <div class="mb-3 form-group">
			    	<%= form.label :status, "Status" %>
						<select class="form-control" aria-label=".form-select-sm example" id="status_select">
							<% if @proposal.status == 'New' %>
								<option value="New" selected>New</option>
								<option value="Draft">Draft</option>
							<% else %>
								<option value="New">New</option>
								<option selected value="Draft">Draft</option>
							<% end -%>
						</select>
						<%= form.hidden_field :status, id:"f_status" %>
						<%= form.hidden_field :list_item_ids, id:"f_list_item_ids" %>
						<%= form.hidden_field :list_item_quans, id:"f_list_item_quans" %>
						<%= form.hidden_field :list_item_tax_ids, id:"f_list_item_tax_ids" %>
						<%= form.hidden_field :discount, id:"f_discount" %>
						<%= form.hidden_field :customer_id, value: @lead.id %>
						<%= form.hidden_field :total, id:"f_total_proposal"  %>
					</div>
				<% end %>
			</div>
		</div>

		<div class="proposal-upper-right">
			<div class="proposal-title">
				<h2>Customer Details</h2>
			</div>
			<div class="proposal-upper-right-content">
				<span><b>Name:</b> <%= @lead.name%></span>
				<span><b>Address:</b> <%= @lead.detail_address%></span>
				<span><b>City:</b> <%= @lead.city%></span>
				<span><b>Email:</b> <%= @lead.email%></span>
				<span><b>Phone:</b> <%= @lead.phone%></span>
				<span id="item_list_json" data-items="<%= @items.to_json %>"></span>
			</div>
		</div>
	</div>
	<div class="proposal-lower">
		<div class="proposal-lower-title">
			<h2>Item Details</h2>
		</div>
		<div class="proposal-middle">
			<h3>Add Item</h3>
			<div class="item-select">
				<select class="form-control" id="select_input_item">
					<option selected disabled value="0">Select an item</option>
					<% @items.each do |item| %>
						<option value="<%= item.id %>"><%= item.name %></option>
					<% end -%>
					
				</select>
			</div>
			<button type="button" class="btn btn-success btn-sm btn-plus"><i class="fas fa-plus"></i></button>
			<button style="float:right;margin-right: 30px ;" type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#form_new_item"><i class="fas fa-plus"></i> Add New Item</button>
		</div>
		<div>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Item</th>
						<th>Quantity</th>
						<th>Price</th>
						<th>Tax</th>
						<th>Amount</th>
					</tr>
				</thead>
				<tbody id="tbody_list_item">
					<% @table_items.each do |item| %>
					<tr class="tr_item" data-itemid=<%= item.item_id %>>
						<td><a type="button" class="fas fa-times-circle icon_del_item" style="position:absolute;"></a>
							<input type="text" class="form-control" disabled value="<%= item.get_item_name %>"></td>
							<td><input type="number" class="form-control table_quantity" min=1 value="<%= item.quantity %>"></td>
							<td><input type="text" class="form-control table_price" value="<%= item.price %>"></td>
							<td>
								<select class="form-control tax_select">
									<% if item.tax_id.nil? %>
										<option value=0 data-taxp=0 selected>No tax</option>
									<% else %>
										<option value=0 data-taxp=0>No tax</option>
									<% end -%>
									<% @taxes.each do |tax| %>
										<% if tax.id == item.tax_id %>
											<option value=<%= tax.id %> data-taxp=<%= tax.tax_percent %> selected><%= tax.name %></option>
										<% else %>
											<option value=<%= tax.id %> data-taxp=<%= tax.tax_percent %>><%= tax.name %></option>
										<% end -%>
									<% end -%>
								</select>
							</td>
							<td><input type="text" class="form-control table_amount" placeholder="Amount" value="<%= item.amount %>"></td>
						</tr>
					<% end -%>
				</tbody>
			</table>
			<center>
				<button class="btn btn-success btn_calculate">Calculate</button>
			</center>
		</div>
		<div class="table-total">
			<table class="table table-bordered table-striped">
				<tr>
					<td>Subtotal</td>
					<td><span id="subtotal_price"></span></td>
				</tr>
				<tr>
					<td>Discount(%)</td>
					<td><input type="number" name="discount" value="<%= @proposal.discount %>" min="0" max="100" class="form-control"></td>
				</tr>
				<tr>
					<td>Total taxes</td>
					<td><span id="tax_price_result">0</span></td>
				</tr>
				<tr>
					<td><b>Total</b></td>
					<td><b><span id="total_afterall"><%= @proposal.total %></span></b></td>
				</tr>
			</table>
			<div>
				<button type="button" id="btnSubmitEditProposalForm" class="btn btn-success">Save</button>
			</div>
		</div>
	</div>
</div>
<div id="form_new_item" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Add Appointment</h4>
			</div>
			<div class="modal-body">
				<%= form_with(model: @item, url: create_from_proposal_products_path) do |form| %>
				<div class="mb-3 form-group">
					<%= form.label :category, "Category*" %>
					<select class="form-select form-control" aria-label="Default select example" id="f_cate_select">
						<% @categories.each do |category| %>
							<option value="<%= category.id %>"><%= category.name %></option>
						<% end -%>
					</select>
					<%= form.hidden_field :category_id, id:"f_cate" %>
					<%= form.hidden_field :customer_id, id:"f_customer_item" %>
				</div>
				<div class="mb-3 form-group">
					<%= form.label :name, "Name*" %>
					<%= form.text_field :name, class:"form-control", placeholder: "Name"%>
				</div>
				<div class="mb-3 form-group">
					<%= form.label :price, "Price*" %>
					<%= form.text_field :price, class:"form-control", placeholder: "Price"%>
				</div>
				<div class="mb-3 form-group">
					<%= form.label :description, "Description" %>
					<%= form.text_area :description, class:"form-control", placeholder: "Description"%>
				</div>
				<div class="mb-3 form-group">
					<%= form.label :tax_id, "Tax" %>
					<%= form.select(:tax_id, ["No Tax","GTGT"], {}, { :class => 'form-control' }) %>
				</div>
				<div class="mb-3 form-group">
					<%= form.label :status, "Status" %>
					<%= form.select(:status, [["Active", true],["Inactive", false]], {}, { :class => 'form-control' }) %>
				</div>
				<div class="mb-3 form-group">
					<%= form.submit "Add", class: "btn btn-success btn_item_inpro" %>
				</div>
				<% end -%>
			</div>
		</div>
	</div>
</div>

