	$('.tr_item').each(function() {
		var item_id = $(this).data("itemid");
		var quan = parseInt($(".tr_item[data-itemid='"+item_id+"'] .table_quantity").val());
		var price = parseInt($(".tr_item[data-itemid='"+item_id+"'] .table_price").val());
